    "LogLevel": {
      "Default": "Debug",
      "System": "Information",
      "Microsoft": "Information"
    }
  },
  "Saml2": {
    "IdPMetadata": "https://localhost:44305/metadata",
    "Issuer": "urn:itfoxtec:identity:saml2:testwebappcoreAzureKeyVault",
