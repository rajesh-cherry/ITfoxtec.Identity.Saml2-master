  // And configure your Azure Key Vault.
  "AzureKeyVault": {
    "ClientId": "xxxx",
    "ClientSecret": "xxxx",
    "BaseUrl": "https://xxxx.vault.azure.net/",
    "CertificateName": "testwebappcore"
  }
